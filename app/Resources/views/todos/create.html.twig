{% extends 'base.html.twig' %}
{% block title %}Todo List{% endblock %}
{% block body %}
<div class="ui raised very padded text container segment">
    <div class="float right">
        <p>{{ user.getUsername() }}</p>
    </div>
    <h2 class="ui header">Job Scout</h2>
    <div class="ui breadcrumb">
        <a class="section" href="{{ url('todos') }}">Todo List</a>
        <div class="divider"> / </div>
        <div class="active section">Add new Task</div>
    </div>
    <form class="ui large form" method='post' action='{{ url('todo_save') }}'>
        <div class="ui divider"></div>
        <div class="ui ">
            <div class="field">
                <div class="ui left icon input">
                    <i class="sticky note outline icon"></i>
                    <input type="text" name="content" placeholder="Your Task">
                </div>
            </div>
        </div>
        <div class="ui divider"></div>
        <a href="" class="ui basic button green">
            <i class="chevron left icon"></i>
            Go Back
        </a>
        <button class="ui green submit button float pullright" type="submit">Save</button>
    </form>


</div>
{% endblock %}
